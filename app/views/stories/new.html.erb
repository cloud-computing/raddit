<h2 class="ruled">Submit a New Link</h1>

<% form_for(@story) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </p>
  <p>
    <%= f.label :media %><br />
    <%= f.select :media, Story::MEDIA_TYPES %>
  </p>
  <p class="ruled">
    <%= f.submit 'Create' %>
  </p>
<% end %>
