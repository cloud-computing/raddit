<h2 class="ruled">Log In</h2>

<% form_tag(session_path, :class => "inline") do -%>

  <p>
    <%= label_tag :login, "Username" %>
    <%= text_field_tag :login, @login, :class => "text" %>
  </p>
  <p>
    <%= label_tag :password, "Password" %>
    <%= password_field_tag :password, nil, :class => "text" %>
  </p>
  <p class="ruled"><%= submit_tag 'Log In' %></p>
<% end -%>
