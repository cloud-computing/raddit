<h2 class="ruled">Submit a New Link</h2>

<% form_for(@story, :html => { :class => 'inline' }) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label :link %>
    <%= f.text_field :link, :value => "http://", :class => 'title' %>
  </p>
  <p>
    <%= f.label :media %>
    <%= render :partial => 'media', :collection => Story::MEDIA_TYPES %>
  </p>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :class => 'text' %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p class="ruled">
    <%= f.submit 'Submit Link' %>
  </p>
<% end %>
